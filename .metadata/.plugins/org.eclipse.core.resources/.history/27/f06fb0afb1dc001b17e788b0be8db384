void print(char *msg, ...) {
#if USB_DEBUG
	char buff[100];
	va_list args;
	va_start(args, msg);
	vsprintf(buff,msg,args);
	HAL_UART_Transmit(&huart2, (uint8_t *)buff, strlen(buff), 10);
#endif
}
