void LCD_write_byte(unsigned char dt, unsigned char command)
{
	unsigned char i;  	
    sce0; 	
	if(command)
		dc1;
	else
		dc0;		
	for(i=0;i<8;i++)
	{ 
		if(dt&0x80)
			sdin1;
		else
			sdin0;
		dt=dt<<1;	
		sclk0;
		sclk1;
		sclk0;		
	}	  
}



void LCD_init(void)
{
	sce1;
	res1;
	delay_ms(100);
	res0;  	
	delay_ms(500);
	res1;
	delay_ms(100);
	LCD_write_byte(0x25,0);//LCD功能设置：芯片活动，水平寻址，使用扩展指令
	LCD_write_byte(0xA1,0);//设置VOP值，室温下的编程范围为3.00-10.68
	//Vlcd=3.06+(VOP)*0.06,本例VOP为0B0101 0000为十进制的80，Vlcd=7.86V
	LCD_write_byte(0x11,0);//混合偏执率
	LCD_write_byte(0x20,0);//LCD功能设置：芯片活动，水平寻址，使用基本指令
	LCD_write_byte(0x0C,0);//设定显示配置:普通模式
	LCD_clear();


	sce1;
}

void LCD_set_XY(unsigned char X, unsigned char Y)
{
	LCD_write_byte(0x40 | Y, 0);// column
	LCD_write_byte(0x80 | X, 0);// row
	sce0;
} 

void LCD_clear(void)
{
	unsigned char t;
	unsigned char k;
	LCD_set_XY(0,0);
	for(t=0;t<6;t++)
	{ 
		for(k=0;k<84;k++)
		{ 
			LCD_write_byte(0x00,1);	 						
		} 
	}
	sce1;
}

void LCD_write_char(unsigned char c)
{
	unsigned char line;
	c-= 32;
	for (line=0; line<6; line++)
	LCD_write_byte(font6x8[c][line], 1);
}

void LCD_write_String(unsigned char X,unsigned char Y,char *s)
{
	LCD_set_XY(X,Y);
	while (*s) 
	{
		LCD_write_char(*s);
		s++;
	}
} 

void LCD_write_shu(unsigned char row, unsigned char page,unsigned char c) //row:�� page:ҳ dd:�ַ�
{
	unsigned char i;  	
	
	LCD_set_XY(row*8, page);// �У�ҳ 
	for(i=0; i<8;i++) 
	{
		LCD_write_byte(shuzi[c*16+i],1); 
	}
	
    LCD_set_XY(row*8, page+1);// �У�ҳ 
	for(i=8; i<16;i++) 
	{
		LCD_write_byte(shuzi[c*16+i],1);
	}
	sce1;
}

void LCD_write_wenzi(unsigned char row, unsigned char page,unsigned char c) //row:�� page:ҳ dd:�ַ�
{
	unsigned char i;  	
	
	LCD_set_XY(row*8, page);// �У�ҳ 
	for(i=0; i<8;i++) 
	{
		LCD_write_byte(wenzi[c*16+i],1); 
	}
	
    LCD_set_XY(row*8, page+1);// �У�ҳ 
	for(i=8; i<16;i++) 
	{
		LCD_write_byte(wenzi[c*16+i],1);
	}
	sce1;
}


void LCD_write_hanzi(unsigned char row, unsigned char page,unsigned char c) //row:�� page:ҳ dd:�ַ�
{
	unsigned char i;  	
	
	LCD_set_XY(row*8, page);// �У�ҳ 
	for(i=0; i<16;i++) 
	{
		LCD_write_byte(han[c*32+i],1); 
	}

    LCD_set_XY(row*8, page+1);// �У�ҳ 
	for(i=16; i<32;i++) 
	{
		LCD_write_byte(han[c*32+i],1);
	}	
	sce1;
}
